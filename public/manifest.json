{
  "manifest_version": 3,
  "name": "Yenoh",
  "version": "0.0.1",
  "description": "A simple React app as a Chrome extension",
  "action": {
    "default_popup": "screens/index.html"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "popup-shim.js"
      ],
      "match_about_blank": false,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "isolated_world": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "cookies",
    "storage",
    "unlimitedStorage",
    "scripting",
    "webRequest",
    "declarativeNetRequest"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "screens/*",
        "js/*",
        "assets/*",
        "index.css",
        "*.json"
      ]
    }
  ],
  "minimum_chrome_version": "101"
}